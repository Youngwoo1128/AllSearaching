<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.woojoo.kbanktest.model.network.response.Documents" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_thumnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.collection}"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/iv_thumnail"
            app:layout_constraintStart_toEndOf="@id/iv_thumnail"
            app:layout_constraintBottom_toBottomOf="@+id/tv_date"
            tools:text="기사"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.datetime}"
            app:layout_constraintTop_toBottomOf="@+id/tv_type"
            app:layout_constraintStart_toStartOf="@+id/tv_type"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="2022-01-01"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
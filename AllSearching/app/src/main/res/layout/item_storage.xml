<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="item"
            type="com.woojoo.allsearching.domain.entites.Researching" />

        <variable
            name="callback"
            type="com.woojoo.allsearching.ui.adapter.StorageAdapter.DeleteLocalItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_container"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_thumnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_indexValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.id.toString()}"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/iv_thumnail"
            app:layout_constraintBottom_toBottomOf="@id/iv_thumnail"
            app:layout_constraintStart_toEndOf="@+id/iv_thumnail"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClickListener="@{() -> callback.deleteLocalItem(item)}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>